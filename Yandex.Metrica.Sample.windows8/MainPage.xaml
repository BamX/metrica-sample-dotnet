<Page
    x:Class="Yandex.Metrica.Sample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid
        Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Text="YANDEX.Metrica DEMO"
            Margin="12" />
        <StackPanel
            Grid.Row="1"
            HorizontalAlignment="Stretch"
            Margin="12,0,12,0">
            <Button
                Click="OnClick"
                HorizontalAlignment="Stretch"
                Content="Click" />
            <Button
                Click="OnError"
                HorizontalAlignment="Stretch"
                Content="Error" />
            <Button
                Click="OnCrash"
                HorizontalAlignment="Stretch"
                Content="Crash" />
        </StackPanel>
    </Grid>
</Page>
