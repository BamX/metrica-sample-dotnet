<Window
    x:Class="Yandex.Metrica.Sample.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="MainWindow"
    Height="350"
    Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Text="YANDEX.Metrica DEMO"
            Margin="12" />
        <StackPanel
            Grid.Row="1"
            Margin="12,0">
            <Button
                Click="OnClick"
                Content="Click" />
            <Button
                Click="OnError"
                Content="Error" />
            <Button
                Click="OnCrash"
                Content="Crash" />
        </StackPanel>
    </Grid>
</Window>
